<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    
    <rewrite>
      <rules>
        <!-- Handle Next.js _next requests -->
        <rule name="NextStatic" stopProcessing="false">
          <match url="^_next/.*" />
          <action type="Rewrite" url="frontend.js" />
        </rule>
        
        <!-- Handle Dialog API routes -->
        <rule name="DialogApi" stopProcessing="false">
          <match url="^Dialog/File/(.*)$" />
          <action type="Rewrite" url="frontend.js" />
        </rule>
        
        <!-- Handle About API routes -->
        <rule name="AboutApiRoutes" stopProcessing="false">
          <match url="^api/\(About\)/(.*)$" />
          <action type="Rewrite" url="frontend.js" />
        </rule>
        
        <!-- Handle Home API routes -->
        <rule name="HomeApiRoutes" stopProcessing="false">
          <match url="^api/\(Home\)/(.*)$" />
          <action type="Rewrite" url="frontend.js" />
        </rule>
        
        <!-- Handle general API routes -->
        <rule name="ApiRoutes" stopProcessing="false">
          <match url="^api/(.*)$" />
          <action type="Rewrite" url="frontend.js" />
        </rule>
        
        <!-- Handle all other dynamic content -->
        <rule name="DynamicContent" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="frontend.js" />
        </rule>
      </rules>
    </rewrite>

    <iisnode node_env="production" />
    
    <handlers>
      <add name="iisnode" path="*.js" verb="*" modules="iisnode" />
    </handlers>
    
    <!-- Environment Variables -->
    <environmentVariables>
      <add name="NODE_ENV" value="production" />
      <add name="NEXT_PUBLIC_API_BASE_URL" value="https://www.dohsaving.com/api" />
      <add name="NEXT_PUBLIC_PICHER_BASE_URL" value="https://www.dohsaving.com" />
      <add name="NEXT_PUBLIC_URL_BASE_DIR" value="C:/BackEndWeb/public/Uploads" />
    </environmentVariables>
    
  </system.webServer>
</configuration>